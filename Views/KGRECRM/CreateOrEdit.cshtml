@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")

    <script>

    $("#mobileNo").blur(function () {

        var mobileNo = $('#mobileNo').val();

        if (mobileNo == null || mobileNo.trim() === '') {
            return;
        }
           $.ajax({
               type: "GET",
                    url: "@Url.Action("CheckMobileNo", "KGRECRM")",
                    datatype: "Json",
               data: {
                   mobileNo: mobileNo
               },
               success: function (data) {

                   if (data) {
                       alert(data);
                   }
                   else {
                       return;
                   }
               }
            });
    });
