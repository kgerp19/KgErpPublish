        <script type="text/javascript">
            window.onload = function () {
                alert("Please input Mobile/Email");
            };
        </script>
    }
}


@if (TempData["DataSave"] != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("Data Save Successfully!");
        };
    </script>
}
